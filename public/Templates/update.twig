{% extends "index.twig" %}
{% block body %}
    Update product: {{ product.name  }}

    <form action="/product/{{ product.id }}" method="post">
        <div class="form-group">
            <label for="name">Product naam</label>
            <input type="name" text="{{ product.name }}" name="name" class="form-control" id="name" placeholder="naam">
        </div>
        <div class="form-group">
            <label for="description">Beschrijving</label>
            <textarea class="form-control" name="description" type="description" id="description" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="price">Prijs</label>
            <input type="number" name="price" class="form-control" id="price" placeholder="prijs">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
{% endblock %}